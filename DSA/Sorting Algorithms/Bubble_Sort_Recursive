# reversing a palindrome by RECURSION

def bubble_sort_recursive(arr,n= None):
  if n is None:
    n = len(arr)

  if n ==1:
    return 

  for i in range(n-1):
    if arr[i] > arr[i+1]:
      arr[i],arr[i+1]= arr[i+1],arr[i]

  bubble_sort_recursive(arr,n-1)

my_arr = [22,3,44,88,6]
bubble_sort_recursive(my_arr)
print("sorted_arr :",my_arr)
